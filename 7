#include <iostream>
using namespace std;

int main() {
    int n;
    while (true) {
        cout << "Enter a number (1 to stop): ";
        cin >> n;

        if (n == 1) break;          // stop if user enters 1
        if (n < 0) continue;        // skip negative numbers

        cout << "You entered: " << n << endl;
    }
    return 0;
}
