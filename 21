#include <iostream>
using namespace std;

int main() {
    int n, evenSum = 0, oddSum = 0;
    cout << "Enter a number: ";
    cin >> n;

    while (n > 0) {
        int rem = n % 10;
        if (rem % 2 == 0)
            evenSum += rem;
        else
            oddSum += rem;
        n /= 10;
    }

    cout << "Sum of even digits: " << evenSum << endl;
    cout << "Sum of odd digits: " << oddSum;
    return 0;
}
