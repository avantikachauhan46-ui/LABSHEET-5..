#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int n, sum = 0, temp, digits = 0;
    cout << "Enter a number: ";
    cin >> n;
    temp = n;

    int num = n;
    while (num > 0) {
        digits++;
        num /= 10;
    }

    num = n;
    while (num > 0) {
        int rem = num % 10;
        sum += pow(rem, digits);
        num /= 10;
    }

    if (sum == temp)
        cout << n << " is an Armstrong number.";
    else
        cout << n << " is not an Armstrong number.";

    return 0;
}
